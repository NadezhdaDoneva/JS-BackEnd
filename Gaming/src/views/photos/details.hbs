     <main id="details">
        <section id="details-info">
            <div class="game-image">
                <img src="{{photo.image}}">
            </div>

            <div class="game-info">
                <div class="game-text">
                    <h1 id="name">{{photo.name}}</h1>
                    <h3 id="platform">{{photo.platform}}</h3>
                    <p id="price"><span>{{photo.price}}</span></p>
                    <p id="genre"><span>{{photo.genre}}</span></p>
                    <p id="description">{{photo.description}}</p>
                </div>
                <div class="product-btn">
                    {{#if isAuthenticated}}
                    <!--Only for registered user and author of the publication -->
                    {{#if isOwner}}
                    <div class="author">
                        <a href="/photos/{{photo._id}}/edit" class="btn-edit">Edit</a>
                        <a href="/photos/{{photo._id}}/delete" class="btn-delete">Delete</a>
                    </div>
                    
                    {{!-- TODO: --}}
                    {{else}}   
                        {{#if isBought}}
                    <!-- Logged in user who has already buy this game code-->
                    <p class="buy-message">You have already bought this game</p> 
                        {{else}}
                    <!-- Logged in user who has not yet buy this game code-->
                    <a href="/photos/{{photo._id}}/bought" class="btn-buy">Buy</a>
                        {{/if}}
                    {{/if}}
                    {{/if}}
                </div>
            </div>
        </section>
    </main>
